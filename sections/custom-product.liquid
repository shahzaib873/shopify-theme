{% comment %}
   custom-product.liquid
   This is a custom product page template using Shopify 2.0 features.
{% endcomment %}

{% schema %}
{
  "name": "Custom Product",
  "settings": [
    {
      "type": "header",
      "content": "Custom Product Settings"
    },
    {
      "type": "text",
      "id": "header_content",
      "label": "Header Content",
      "default": "Custom Product"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Desktop Layout",
      "options": [
        {
          "value": "grid",
          "label": "Grid"
        },
        {
          "value": "collage",
          "label": "Collage"
        }
      ],
      "default": "grid"
    },
    {
      "type": "select",
      "id": "image_height",
      "label": "Featured Image Height",
      "options": [
        {
          "value": "adapt",
          "label": "Adapt to Image"
        },
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        }
      ],
      "default": "adapt",
      "info": "For best results, use an image with a 3:2 aspect ratio. [Learn more](https:\/\/help.shopify.com\/manual\/shopify-admin\/productivity-tools\/image-editor#understanding-image-aspect-ratio)"
    },
    {
      "type": "text",
      "id": "custom_content",
      "label": "Custom Content",
      "default": "Customize this section..."
    }
  ],
  "presets": [
    {
      "name": "Custom Product",
      "category": "Products"
    }
  ]
}
{% endschema %}

